generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  trades    Trade[]
}

model Trade {
  id         String   @id @default(uuid())
  userId     String
  symbol     String
  entryPrice Float
  exitPrice  Float
  quantity   Int
  pnl        Float
  tradeDate  DateTime
  notes      String?   // âœ… ADD THIS

  user       User     @relation(fields: [userId], references: [id])
}


